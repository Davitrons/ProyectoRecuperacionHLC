{% extends 'layout.html.twig' %}

{% block title %}Historial - {{ parent() }}{% endblock %}

{% block content %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page"><a href="{{ path('principal') }}"><i class="fa fa-briefcase"></i></a></li>
            <li class="breadcrumb-item" aria-current="page"><a href="{{ path('material_listar') }}">Materiales</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ material.nombre }}</li>
        </ol>
    </nav>

    <h1>Historial de  {{ material.nombre }}</h1>

    <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
            <th>Fecha Hora Prestamos</th>
            <th>Fecha Hora Devolucion</th>
            <th>Notas</th>
        </tr>
        </thead>
        <tbody>
        {% for historial in historiales %}
            <tr>
                <td>{{ historial.fechaHoraPrestamo | date("d/m/Y") }}</td>
                <td>{{ historial.fechaHoraDevolucion | date("d/m/Y") }}</td>
                <td>{{ historial.notas }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('material_listar') }}" class="btn btn-info"><i class="fa fa-arrow-left"></i> Volver al listado de Materiales</a>
{% endblock %}