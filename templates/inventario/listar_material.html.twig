{% extends 'layout.html.twig' %}

{% block title %}Inventario{% endblock %}

{% block content %}
    <h1>Material en {{ localizacion }}</h1>

    <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
            <th class="w-25">Nombre</th>
            <th class="w-50">Descripcion</th>
            <th class="w-25">Responsable</th>
        </tr>
        </thead>
        <tbody>
        {% for material in materiales %}
            <tr>
                <td>
                    {% if not material.disponible %}<del>{% endif %}
                    {{ material.nombre }}
                    {% if not material.disponible %}</del>{% endif %}
                </td>
                <td>{{ material.descripcion | nl2br }}</td>
                <td>{{ material.responsable }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('inventario_listar') }}" class="btn btn-info"><i class="fa fa-arrow-left"></i> Volver a las localizaciones</a>
{% endblock %}
