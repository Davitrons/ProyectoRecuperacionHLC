{% extends 'layout.html.twig' %}

{% block title %}Modificar persona{% endblock %}

{% block content %}
    {% if persona.id %}
        <h1>Modificando a {{ persona }}</h1>
    {% else %}
        <h1>Nueva Persona</h1>
    {% endif %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-success">
        {% if  persona.id %}
            <i class="fa fa-check"></i> Guardar cambios
        {% else %}
            <i class="fa fa-plus"></i> Crear nueva persona
        {% endif %}
    </button>
    <a href="{{ path('persona_listar') }}" class="btn btn-info"><i class="fa fa-arrow-left"></i> Volver al listado</a>
    {{ form_end(form) }}

{% endblock %}